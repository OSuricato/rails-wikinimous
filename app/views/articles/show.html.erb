<div class="container mt-5">
  <h1><%= @article.title %></h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text"><strong>Title:</strong> <%= @article.title %></p>
      <p class="card-text"><strong>Content:</strong> <%= @article.content %></p>

      <%= link_to edit_article_path(@article), class: "btn btn-primary", title: "Edit Article" do %>
        <i class="fas fa-edit"></i>
      <% end %>

      <%= link_to article_path(@article), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' }, title: "Delete Article" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>

      <%= link_to 'Back to articles', articles_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
