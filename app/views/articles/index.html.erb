<div class="container mt-5">


  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <h4><%= link_to article.title, article_path(article), class: "text-dark" %></h4>
        <p class="mb-0"><%= truncate(strip_tags(article.content), length: 50) %></p>
      </li>
    <% end %>
  </ul>
</div>
